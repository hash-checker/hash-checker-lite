<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:navigationBarColor">?attr/colorBackground</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="AppAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/bg_dialog_rounded_corners</item>
        <item name="android:textColorPrimary">?attr/colorCommonText</item>
        <item name="colorControlNormal">?attr/colorCommonText</item>
        <item name="textColorAlertDialogListItem">?attr/colorCommonText</item>
    </style>

    <style name="AppMenuButton" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">?attr/colorAccent</item>
    </style>

    <style name="AppCircleButton" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet</item>
    </style>

    <style name="AppEditTextHashValue">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:textColor">?attr/colorCommonText</item>
        <item name="android:textColorHint">?attr/colorCommonUnselected</item>
        <item name="android:importantForAutofill" tools:ignore="NewApi">no</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="AppImageSupport">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">@dimen/common_margin</item>
        <item name="android:background">@drawable/bg_rounded_selector</item>
    </style>

    <style name="AppTextViewDialogComponent">
        <item name="android:layout_marginStart">@dimen/common_margin_5</item>
        <item name="android:layout_marginEnd">@dimen/common_margin_5</item>
        <item name="android:textColor">?attr/colorCommonText</item>
        <item name="android:textColorHint">?attr/colorCommonUnselected</item>
    </style>

    <style name="AppDialogButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="AppFeedbackDeviceItemLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/common_margin</item>
    </style>

    <style name="AppFeedbackTitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">?attr/colorCommonText</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="AppFeedbackValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/common_margin_half</item>
        <item name="android:text">@string/common_none</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>
</resources>
